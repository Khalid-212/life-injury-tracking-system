// This is your Prisma schema file.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid()) // Use auto-increment for user IDs
  email    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  injuries Injury[] // Add the relation field
}

model Injury {
  id          String   @id @default(uuid()) // Use auto-increment for injury IDs
  injuryDate  DateTime // Date of the injury
  injuryTime  DateTime // Time of the injury
  injuryList Json[]
  reportedBy  User     @relation(fields: [reportedById], references: [id])
  reportedById String   // Store the user ID who reported the injury
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
